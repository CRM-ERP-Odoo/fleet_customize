<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_calendar_event_search_inherit_fleet_customize" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit.fleet_customize</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <field name="show_as" position="after">
                <field name="res_id"/>
            </field>
        </field>
    </record>

    <record id="fleet_vehicle_view_form_inherit_fleet_customize" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.fleet_customize</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="action" class="oe_stat_button" icon="fa-clock-o" name="%(calendar.action_calendar_event)d"
                        context="{'default_res_id': id, 'search_default_res_id': id, 'default_res_model': 'fleet.vehicle', 'search_default_res_model': 'fleet.vehicle'}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="calendar_event_count"/>
                        </span>
                        <span class="o_stat_text">Calendar</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

</odoo>
